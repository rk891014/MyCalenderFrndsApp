<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="data"
            type="java.util.List&lt;String&gt;" />
        <variable
            name="viewModel"
            type="com.example.frndsapp.viewModel.MainActivityViewModel" />
    </data>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:padding="10dp"
                android:columnCount="7"
                android:rowCount="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:onClick="@{viewModel.onDateSelected}"
                    android:textColor="#000000"
                    android:text="@{data.get(0)}" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:onClick="@{viewModel.onDateSelected}"
                    android:text="@{data.get(1)}" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:onClick="@{viewModel.onDateSelected}"
                    android:text="@{data.get(2)}" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:onClick="@{viewModel.onDateSelected}"
                    android:text="@{data.get(3)}" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:onClick="@{viewModel.onDateSelected}"
                    android:text="@{data.get(4)}" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:onClick="@{viewModel.onDateSelected}"
                    android:text="@{data.get(5)}" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:onClick="@{viewModel.onDateSelected}"
                    android:text="@{data.get(6)}" />

            </GridLayout>

</layout>